<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#416600">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="#f4e111" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@id/relativeLayout2"
        android:layout_gravity="center"
        android:background="#f4e111" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/relativeLayout2"
        android:layout_alignEnd="@id/relativeLayout"
        android:layout_alignParentStart="true"
        android:layout_below="@id/relativeLayout"
        android:fillViewport="false">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="150dp"
                android:layout_height="136dp"
                android:layout_column="0"
                android:layout_marginStart="16dp"
                android:layout_row="0"
                android:contentDescription="@string/app_name"
                android:onClick="banana"
                android:scaleType="fitCenter"
                android:src="@drawable/banana2" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="150dp"
                android:layout_height="136dp"
                android:layout_column="2"
                android:layout_marginEnd="16dp"
                android:layout_row="0"
                android:contentDescription="@string/app_name"
                android:onClick="cashew"
                android:scaleType="fitCenter"
                android:src="@drawable/cashew2" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="150dp"
                android:layout_height="136dp"
                android:layout_column="0"
                android:layout_marginStart="16dp"
                android:layout_row="1"
                android:contentDescription="@string/app_name"
                android:onClick="coconut"
                android:scaleType="fitCenter"
                android:src="@drawable/coconut2" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="150dp"
                android:layout_height="136dp"
                android:layout_column="2"
                android:layout_marginEnd="16dp"
                android:layout_row="1"
                android:contentDescription="@string/app_name"
                android:onClick="jasmine"
                android:scaleType="fitCenter"
                android:src="@drawable/jasmin2" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="150dp"
                android:layout_height="136dp"
                android:layout_column="0"
                android:layout_marginStart="16dp"
                android:layout_row="2"
                android:contentDescription="@string/app_name"
                android:onClick="jawar"
                android:scaleType="fitCenter"
                android:src="@drawable/jowar2" />
        </GridLayout>
    </ScrollView>
</RelativeLayout>
